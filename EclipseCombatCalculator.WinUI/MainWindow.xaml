<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="EclipseCombatCalculator.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EclipseCombatCalculator.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:EclipseCombatCalculator.WinUI.ViewModel"
    mc:Ignorable="d"
    Title="Eclipse Combat Simulator">

    <NavigationView
        IsSettingsVisible="False"
        IsBackButtonVisible="Collapsed"
        Loaded="NavigationView_Loaded"
        SelectionChanged="NavigationView_SelectionChanged">

        <Frame
            x:Name="rootFrame" />
        <NavigationView.MenuItems>
            <NavigationViewItem
                FontSize="28"
                FontFamily="{StaticResource EclipseFont}"
                x:Name="Blueprints"
                Content="Blueprints" />
            <NavigationViewItem
                FontSize="28"
                FontFamily="{StaticResource EclipseFont}"
                x:Name="Calculations"
                Content="Calculations" />
            <NavigationViewItem
                FontSize="28"
                FontFamily="{StaticResource EclipseFont}"
                x:Name="Combat"
                Content="Combat"/>
        </NavigationView.MenuItems>
    </NavigationView>
</Window>
